<?xml version="1.0" encoding="UTF-8"?>
<phpunit
		bootstrap="vendor/autoload.php"
		verbose="true"
		stopOnError="false"
		stopOnFailure="false"
		stopOnIncomplete="false"
		stopOnSkipped="false"
		convertErrorsToExceptions="true"
		convertNoticesToExceptions="true"
		convertWarningsToExceptions="true"
		colors="true"
		forceCoversAnnotation="false"
		processIsolation="false">
	<testsuites>
		<testsuite name="PHPMailer Tests">
			<directory>./test/</directory>
		</testsuite>
	</testsuites>
	<php>
		<const name="TEST_MAIL_TO" value="somebody@example.com"/>
		<const name="TEST_MAIL_FROM" value="phpunit@example.com"/>
		<const name="TEST_MAIL_CC" value="cc@example.com"/>
		<const name="TEST_MAIL_HOST" value="localhost"/>
		<const name="TEST_MAIL_PORT" value="2500"/>
		<const name="TEST_IS_CI" value="true"/>
	</php>
	<groups>
		<exclude>
			<group>languages</group>
			<group>pop3</group>
		</exclude>
	</groups>
	<filter>
		<whitelist>
			<directory suffix=".php">./src</directory>
		</whitelist>
	</filter>
	<logging>
		<log type="coverage-clover" target="./clover.xml"/>
	</logging>
</phpunit>
